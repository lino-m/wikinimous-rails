
<div class="container">
  <% @articles.each do |article| %>
    <div class="card p-3">
      <h2><%= link_to article.title, article_path(article) %></h2>
      <p><%= article.content %></p>
    </div>
  <% end %>
</div>


<br><hr><br>

<%= link_to new_article_path do %>
  <i class="fa fa-plus"></i> Add a new article
<% end %>
